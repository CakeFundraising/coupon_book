/- cache [:templates, :community, :header, :headpage, @coupon_book] do
.banner.hero
  .container.edit-button
    br
    = affiliate_campaign_edit_button(@affiliate_campaign)
  .book-nav
    .container
      .row
        .nav-section.col-md-10.col-sm-9
          .top-message Get all #{@coupon_book.coupons.count} deal vouchers via email instantly! Print at home or use on your phone.
          ul.nav.nav-pills.popular
            = render partial:'categories/show/book_nav', collection: @categories, as: :category
        .buy_button_section.col-md-2.col-sm-3
          .save.text-center Every dollar helps!
          = campaign_buy_button(@coupon_book, "Give Now", donate_affiliate_campaign_path(@affiliate_campaign), 'success-transparent')
  .hero-screen