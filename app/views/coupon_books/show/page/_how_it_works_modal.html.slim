#how-it-works-link
  a data-toggle='modal' data-target='#coupon_book_video'
    span.glyphicon.glyphicon-expand
    span See how Cake works!

  #coupon_book_video.modal.fade.video_modal
    .modal-dialog.modal-lg
      .modal-content
        .modal-header 
          button.close aria-hidden="true" data-dismiss="modal" type="button" &times;
          h2.modal-title How Cake works
        .modal-body
          iframe id="coupon_book_video_iframe" class="youtube_video" title="YouTube video player" width="100%" height="400px" src="//www.youtube.com/embed/12BS_9tXzwc?theme=light" frameborder="0" allowfullscreen
      /! /.modal-content
    /! /.modal-dialog
  /! /.modal

  javascript:
    var yt_init = function(){
      CakeCouponBook.videos.youtube({
        modal: '#coupon_book_video',
        provider: 'youtube',
        iframeId: "coupon_book_video_iframe",
        autoshow: true
      });
    };

    if(window.YT){
      yt_init();
    }else{
      CakeCouponBook.videos.youtubeApi();
      CakeCouponBook.videos.queueFunctions(yt_init);
    }