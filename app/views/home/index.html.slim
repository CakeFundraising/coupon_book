= content_for :header do
  - cache [:home, :header] do
    .hero-home
      = render partial:'home/banner/static'

    .secondary-navbar
      ul.nav.nav-pills.popular
        li.active
          a data-toggle="tab" id="tab-campaigns" href="#pop-campaigns"
            span Active Campaigns
        li
          = home_tab_button(:community, 'Community Pages')
        li
          = home_tab_button(:merchant, 'Restaurants & Merchants')
        li
          = home_tab_button(:coupon, 'Best Deals')
                
.container.main-home
  = render partial:'home/search/section'

= content_for :bottom_section do
  = javascript_include_tag 'home'

  .quotes
